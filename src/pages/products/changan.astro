    <section class="changan-section">
      <div class="wrapper">
        <h1 class="changan-big fs-primary-header">CHANGAN</h1>
        <div class="swiper changan-models">
          <div class="swiper-wrapper">
            <div class="swiper-slide model">
              <div class="hero-header">
                <h2 class="model-name">Deepal S7</h2>
                <button class="submit-btn" data-value="deepal-s7">
                  Contact Sales
                </button>
              </div>

              <div class="swiper color-variants" id="deepal-s7">
                <div class="swiper-wrapper">
                  <div class="swiper-slide variant car-image">
                    <img src={deepalS7Blue.src} alt="Deepal S7 Blue Variant" />
                  </div>
                  <div class="swiper-slide variant car-image">
                    <img
                      src={deepalS7Orange.src}
                      alt="Deepal S7 Orange Variant"
                    />
                  </div>
                  <div class="swiper-slide variant car-image">
                    <img
                      src={deepalS7Green.src}
                      alt="Deepal S7 Green Variant"
                    />
                  </div>
                </div>
                <div class="swiper-pagination"></div>
              </div>

              <div class="car-specs">
                <div class="spec">
                  <img src={outputIcon.src} alt="" />
                  <div class="spec-content">
                    <p class="spec-title">Maximum Output</p>
                    <p class="spec-value fw-semi-bold-100">190 KW</p>
                  </div>
                </div>
                <div class="spec">
                  <img src={rangeIcon.src} alt="" />
                  <div class="spec-content">
                    <p class="spec-title">Maximum Range</p>
                    <p class="spec-value fw-semi-bold-100">520 KM</p>
                  </div>
                </div>
                <div class="spec">
                  <img src={nedcIcon.src} alt="" />
                  <div class="spec-content">
                    <p class="spec-title">NEDC milage</p>
                    <p class="spec-value fw-semi-bold-100">485 KM</p>
                  </div>
                </div>
              </div>
            </div>
