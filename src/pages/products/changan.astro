---
// component imports
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";

import "../../styles/pages/changan.scss";

// Asset import
import deepalS7Blue from "../../assets/changan/deepals7-blue.png";
import deepalS7Orange from "../../assets/changan/deepals7-orange.png";
import deepalS7Green from "../../assets/changan/deepals7-green.png";

import deepalSl3Cyan from "../../assets/changan/deepalsl3-cyan.png";
import deepalSl3White from "../../assets/changan/deepalsl3-white.png";
import deepalSl3Purple from "../../assets/changan/deepalsl3-purple.png";

import estarWhite from "../../assets/changan/estar-white.png";
import estarGreen from "../../assets/changan/estar-green.png";
import estarBlue from "../../assets/changan/estar-blue.png";

import eadoWhite from "../../assets/changan/eado-white.png";
import eadoBlue from "../../assets/changan/eado-blue.png";
