<script>
  const btns = document.querySelectorAll(".submit-btn");
  btns.forEach((btn) => {
    btn.addEventListener("click", () => {
      const value = btn.getAttribute("data-value");
      window.location.href = "/contact?item=" + value;
    });
  });
</script>
