    </div>
  </section>

  <section class="contact-page-form-section">
    <div class="wrapper container">
      <form action="https://formsubmit.co/info@pactzion.com">
        <div class="items-checkbox">
          <div class="item-changan item-group">
            <div class="item-name">
              <img src={itemChangan.src} alt="" />
              <p class="fw-semi-bold-200">Changan Electric Vehicles</p>
            </div>
            <div class="checkboxes">
              <ItemCheckbox text="Deepal S7" value="deepal-s7" />
              <ItemCheckbox text="Deepal Sl3" value="deepal-sl3" />
              <ItemCheckbox text="Eado" value="eado" />
              <ItemCheckbox text="Estar" value="estar" />
              <ItemCheckbox text="Qiyuan Q05" value="qiyuan-q05" />
              <ItemCheckbox text="Qiyuan A05" value="qiyuan-a05" />
            </div>
          </div>
          <div class="item-exports item-group">
            <div class="item-name">
              <img src={itemExports.src} alt="" />
              <p class="fw-semi-bold-200">Export Items</p>
            </div>
            <div class="checkboxes">
              <ItemCheckbox text="Pulses" value="pulses" />
              <ItemCheckbox text="Spices" value="spices" />
              <ItemCheckbox text="Oil Seeds" value="seeds" />
              <ItemCheckbox text="Coffee" value="coffee" />
              <ItemCheckbox text="Livestock" value="livestock" />
            </div>
          </div>
          <div class="item-real-estate item-group">
            <div class="item-name">
              <img src={itemEstate.src} alt="" />
              <p class="fw-semi-bold-200">Real Estate Listings</p>
            </div>
            <div class="checkboxes">
              <ItemCheckbox text="Bole Site" value="bole-site" />
              <ItemCheckbox text="4 kilo Site" value="4-kilo-site" />
              <ItemCheckbox text="Summit Site" value="summit-site" />
              <ItemCheckbox text="22 Site" value="22-site" />
            </div>
          </div>
        </div>

        <div class="text-inputs">
          <div class="contact-field">
            <label for="name">Name</label>
            <input id="name" type="text" required />
          </div>

          <div class="contact-field">
            <label for="email">Email</label>
            <input id="email" type="email" required />
          </div>
          <div class="contact-field">
            <label for="company">Company Name (Optional)</label>
            <input id="company" type="text" />
          </div>

          <div class="contact-field">
            <label for="message">Message (Optional)</label>
            <textarea name="message" id="message" cols="30" rows="7"></textarea>
          </div>

          <Button class="btn-primary submit" text="Send Message" />
        </div>
      </form>
    </div>
  </section>
  <iframe
    style="margin-bottom: -.5rem;"
    title="GoogleMap"
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d246.28255800777376!2d38.768661538293124!3d9.01615212859214!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x164b8598186f04e1%3A0x488636c1b82c1cb8!2sBloom%20Tower!5e0!3m2!1sen!2set!4v1707736517536!5m2!1sen!2set"
    width="100%"
    height="450"
    style="border:0;"
    allowfullscreen=""
    class="map"
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"></iframe>
  <Footer />
</Layout>

<script>
  const searchParams = new Proxy(new URLSearchParams(window.location.search), {
    get: (params, prop) => params.get(prop as string),
  });
  const item = searchParams["item"];

  if (item) {
    const itemCheckbox = document.querySelector(`input[value="${item}"]`);
    (itemCheckbox as HTMLInputElement).checked = true;
  }
</script>
