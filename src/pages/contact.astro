---
// component imports
import Button from "../components/Button.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import ItemCheckbox from "../components/ItemCheckbox.astro";
import Layout from "../layouts/Layout.astro";

import "../styles/pages/contact.scss";

// Asset imports
import itemChangan from "../assets/icons/car-icon.svg";
import itemExports from "../assets/icons/exports-icon.svg";
import itemEstate from "../assets/icons/real-estate-icon.svg";
---

