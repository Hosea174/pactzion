---
// Component imports
import Button from "../components/Button.astro";
import ExportCard from "../components/ExportCard.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";

// Stylesheet imports
import "../styles/pages/index.scss";

// Icon asset imports
import connectionIcon from "../assets/icons/connection.svg";
import fbIcon from "../assets/icons/fb-icon.svg";
import featuredIcon from "../assets/icons/featured-icon.svg";
import growthIcon from "../assets/icons/growth.svg";
import inIcon from "../assets/icons/in-icon.svg";
import jobIcon from "../assets/icons/jobs.svg";
import line from "../assets/icons/line.svg";
import locationIcon from "../assets/icons/location-icon.svg";
import mailIcon from "../assets/icons/mail-icon.svg";
import phoneIcon from "../assets/icons/phone-icon.svg";
import ytIcon from "../assets/icons/yt-icon.svg";

// Image asset imports
import coffee from "../assets/coffee.webp";
import car4 from "../assets/eado.png";
import car2 from "../assets/estar.png";
import livestock from "../assets/livestock.webp";
import oil from "../assets/oil-seeds.webp";
import orangeChangan from "../assets/orange-changan.png";
import office from "../assets/pactzion-office.webp";
import aacLogo from "../assets/partner-logos/AAC.png";
import aaccbaLogo from "../assets/partner-logos/AACCBA.png";
import boaLogo from "../assets/partner-logos/BOA.png";
import ecaLogo from "../assets/partner-logos/ECA.png";
import ecxLogo from "../assets/partner-logos/ECX.png";
import etLogo from "../assets/partner-logos/ET.png";
import ahaduLogo from "../assets/partner-logos/ahadu.png";
import car1 from "../assets/s7.png";
// import morLogo from "../assets/partner-logos/mor.png";
import pulses from "../assets/pulses.webp";
import rsBuilding from "../assets/rs-building.png";
import car3 from "../assets/sl3.png";
import spices from "../assets/spices.webp";
import worldMap from "../assets/world-map.svg";
---

<Layout title="PactZion - A leading global trader in Ethiopia">
  <Header />

  <main>
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="container wrapper">
        <div class="section-label hero-label">
          <img src={featuredIcon.src} alt="" />
          <span>Featured Product</span>
        </div>
        <div class="car-text-box carousel swiper">
          <h1 class="fs-primary-header">CHANGAN</h1>
          <div class="img-wrapper swiper-wrapper">
            <div class="swiper-slide">
              <img
                class="hero-car d-s7"
                src={car1.src}
                alt="Changan Deppal S7"
                width="680"
                loading="lazy"
              />
            </div>

            <div class="swiper-slide">
              <img
                class="hero-car d-estar"
                src={car2.src}
                alt="Changan Estar"
                width="680"
                loading="lazy"

              />
            </div>

            <div class="swiper-slide d-sl3">
              <img
                class="hero-car"
                src={car3.src}
                alt="Changan Deppal Sl3"
                width="680"
                loading="lazy"

              />
            </div>

            <div class="swiper-slide">
              <img
                class="hero-car d-eado"
                src={car4.src}
                alt="Changan Eado"
                width="680"
                loading="lazy"

              />
            </div>
          </div>
        </div>

        <div class="hero-socials">
          <img class="line-arrow" src={line.src} alt="" />

          <ul class="social-links" role="list">
            <li>
              <a href="#" class="yt-social"
                ><img src={ytIcon.src} alt="YouTube" />
              </a>
            </li>
            <li>
              <a href="#" class="in-social"
                ><img src={inIcon.src} alt="Linkedin" />
              </a>
            </li>
            <li>
              <a href="#" class="fb-social"
                ><img src={fbIcon.src} alt="Facebook" />
              </a>
            </li>
          </ul>

          <img
            class="line-arrow"
            src={line.src}
            alt=""
            style="transform: scaleY(-1);"
          />
        </div>

        <div class="bottom-box">
          <div class="hero-cta">
            <h2 class="fs-secondary-header fw-semi-bold-100">
              Effortless Elegance on Every Road.
            </h2>
            <a href="/waiting"
              ><Button class="btn-primary" text="Explore Changan" /></a
            >
          </div>
          <div class="pactzion-info">
            <p>
              <span style="color: #d59940; font-weight: bold;">PactZion</span> is
              the exclusive distributor of Changan Electric Vehicles in Ethiopia.
            </p>
          </div>
        </div>
      </div>
    </section>

    <section class="about-section">
      <div class="container wrapper">
        <p class="section-label fs-">Who we are</p>
        <h2 class="fs-secondary-header fw-semi-bold-200 text-center">
          At the Heart of PactZion's Trade Story
        </h2>

        <div class="about-box">
          <div class="about-card card">
            <div class="abt-left">
              <div class="about-text-wrapper">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="49"
                  height="49"
                  fill="none"
                >
                  <path
                    fill="#FAE2BF"
                    fill-rule="evenodd"
                    d="M41.912 41.404c9.372-9.373 9.372-24.569 0-33.941-9.373-9.373-24.569-9.373-33.941 0-9.373 9.372-9.373 24.568 0 33.94 9.372 9.373 24.568 9.373 33.94 0ZM16.17 31.412c-.022.48.148.933.473 1.258.675.675 1.824.623 2.564-.117l10.62-10.62-.308 6.737c-.02.244.01.485.087.708a1.605 1.605 0 0 0 .938.975c.22.085.459.123.702.112a1.92 1.92 0 0 0 .715-.177 2.057 2.057 0 0 0 1.031-1.064c.098-.232.15-.476.152-.719l.507-11.113a1.657 1.657 0 0 0-.473-1.258 1.658 1.658 0 0 0-1.257-.472l-11.113.507c-.47.038-.924.256-1.266.61a1.99 1.99 0 0 0-.566 1.282c-.022.47.14.913.45 1.236a1.65 1.65 0 0 0 1.216.496l6.737-.307-10.62 10.62a1.992 1.992 0 0 0-.589 1.306Z"
                    clip-rule="evenodd"></path>
                </svg>
                <h3 class="fs-tertiary-header fw-semi-bold-200">
                  Shaping Global Trade
                </h3>
                <p>
                  PactZion is a pioneer global trader in Ethiopia, founded in
                  2017, with a vision to establish a robust network of trade
                  that introduces Ethiopian culture and products to the global
                  stage.
                </p>
              </div>

              <div class="missions-wrapper">
                <ul class="missions" role="list">
                  <li class="mission">
                    <div class="mission-icon">
                      <img src={growthIcon.src} alt="" />
                    </div>
                    <p class="fw-semi-bold-200">
                      Promoting sustainable growth in Ethiopia
                    </p>
                  </li>
                  <li class="mission">
                    <div class="mission-icon">
                      <img src={connectionIcon.src} alt="" />
                    </div>
                    <p class="fw-semi-bold-200">
                      Building meaningful connections
                    </p>
                  </li>
                  <li class="mission">
                    <div class="mission-icon">
                      <img src={jobIcon.src} alt="" />
                    </div>
                    <p class="fw-semi-bold-200">Creating job opportunities</p>
                  </li>
                </ul>
                <a href="/waiting"
                  ><Button class="btn-primary" text="Our Mission" /></a
                >
              </div>
            </div>
            <div class="abt-right">
              <img src={office.src} alt="Pactzion Office" />
            </div>
          </div>

          <div class="contact-card card">
            <div class="contact-top-wrapper">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="49"
                height="49"
                fill="none"
              >
                <path
                  fill="#00171F"
                  fill-rule="evenodd"
                  d="M41.912 41.404c9.372-9.373 9.372-24.569 0-33.941-9.373-9.373-24.569-9.373-33.941 0-9.373 9.372-9.373 24.568 0 33.94 9.372 9.373 24.568 9.373 33.94 0ZM16.17 31.412c-.022.48.148.933.473 1.258.675.675 1.824.623 2.564-.117l10.62-10.62-.308 6.737c-.02.244.01.485.087.708a1.605 1.605 0 0 0 .938.975c.22.085.459.123.702.112a1.92 1.92 0 0 0 .715-.177 2.057 2.057 0 0 0 1.031-1.064c.098-.232.15-.476.152-.719l.507-11.113a1.657 1.657 0 0 0-.473-1.258 1.658 1.658 0 0 0-1.257-.472l-11.113.507c-.47.038-.924.256-1.266.61a1.99 1.99 0 0 0-.566 1.282c-.022.47.14.913.45 1.236a1.65 1.65 0 0 0 1.216.496l6.737-.307-10.62 10.62a1.992 1.992 0 0 0-.589 1.306Z"
                  clip-rule="evenodd"></path>
              </svg>
              <h3 class="fs-tertiary-header fw-semi-bold-200">Let's Connect</h3>
            </div>

            <div class="contact-bottom-wrapper">
              <p>
                Uniting Ethiopia and the world, PactZion is your trusted trade
                partner. A brief message is all it takes to join our global
                journey.
              </p>

              <a href="/waiting"
                ><Button class="btn-tertiary btn-dark" text="Contact Us" /></a
              >
            </div>
          </div>
        </div>
      </div>
    </section>

    <section class="what-we-do-section">
      <div class="container wrapper">
        <p
          class="section-label fs-"
          style="color: rgba(255, 255, 255, 0.72); text-align: left;"
        >
          What we do
        </p>
        <h2 class="fs-secondary-header fw-semi-bold-100">
          PactZion is your reliable partner for international trade, connecting
          local innovation with international markets. By partnering with
          renowned names like Changan, China's automobile titan, we're driving
          trust and excellence into every corner of Ethiopia's economy.
        </h2>
      </div>
    </section>

    <section class="business-portfolio import-section">
      <div class="container wrapper">
        <p class="section-label fs-secondary-header fw-semi-bold-100">
          Business Portfolio
        </p>
        <h2 class="fs-secondary-header fw-semi-bold-200 text-center">
          Import items and local businesses
        </h2>

        <!-- Slider main container -->
        <div class="swiper swiper-portfolio">
          <div class="swiper-wrapper portfolio-wrapper">
            <div class="swiper-slide portfolio-card card-car">
              <div class="business-info">
                <h3 class="fs-tertiary-header fw-semi-bold-100">
                  Changan Drives
                </h3>
                <p>
                  Your journey, our innovation. Explore a world of Changan
                  Electric Vehicles
                </p>
                <a href="/waiting">
                  <Button
                    text="Drive The Future"
                    class="nav-button | btn-tertiary btn-white"
                  />
                </a>
              </div>

              <img
                src={orangeChangan.src}
                alt="Changan Vehicle"
                class="card-img"
                width="800px"
              />
            </div>

            <div class="swiper-slide portfolio-card card-rs">
              <div class="business-info">
                <h3 class="fs-tertiary-header fw-semi-bold-100">Real Estate</h3>
                <p>
                  Transforming spaces into homes. Explore our real estate
                  offerings that redefine modern living with style and comfort.
                </p>
                <a href="/waiting">
                  <Button
                    text="Live Your Dream"
                    class="nav-button | btn-tertiary btn-white"
                  />
                </a>
              </div>

              <img
                src={rsBuilding.src}
                alt="Changan Vehicle"
                class="card-img"
                width="700px"
              />
            </div>
          </div>

          <div class="swiper-pagination"></div>
        </div>
      </div>
    </section>

    <section class="business-portfolio export-section">
      <div class="container wrapper">
        <h2 class="fs-secondary-header fw-semi-bold-200 text-center">
          Export items
        </h2>

        <ul class="export-items-grid" role="list">
          <ExportCard
            class="export-item"
            bgImg={coffee.src}
            itemName="Coffee"
            url="/waiting"
          />
          <ExportCard
            class="export-item"
            bgImg={spices.src}
            itemName="Spices"
            url="/waiting"
          />
          <ExportCard
            class="export-item"
            bgImg={oil.src}
            itemName="Oil Seeds"
            url="/waiting"
          />
          <ExportCard
            class="export-item"
            bgImg={livestock.src}
            itemName="Livestock"
            url="/waiting"
          />
          <ExportCard
            class="export-item"
            bgImg={pulses.src}
            itemName="Pulses"
            url="/waiting"
          />
        </ul>
      </div>
    </section>

    <section class="partners-section">
      <div class="container">
        <div class="wrapper">
          <p class="section-label fs-secondary-header fw-semi-bold-100">
            Partners
          </p>
          <h3 class="fs-tertiary-header fw-semi-bold-100 text-center">
            We've partnered with industry giants to redefine standards and drive
            economic empowerment.
          </h3>

          <div class="partners-logo">
            <ul class="logos-slider-wrapper" role="list">
              <li class="company-logo">
                <img src={ahaduLogo.src} alt="Ahadu logo" />
              </li>
              <li class="company-logo">
                <img src={boaLogo.src} alt="BoA logo" />
              </li>
              <li class="company-logo">
                <img src={ecaLogo.src} alt="ECA logo" />
              </li>
              <li class="company-logo">
                <img src={aacLogo.src} alt="AAC logo" />
              </li>
              <li class="company-logo">
                <img src={ecxLogo.src} alt="ECX logo" />
              </li>
              <li class="company-logo">
                <img src={etLogo.src} alt="ET logo" />
              </li>
              <!-- <li class="company-logo">
                <img src={morLogo.src} alt="MOR logo" />
              </li> -->
              <li class="company-logo">
                <img src={aaccbaLogo.src} alt="AACCBA logo" />
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="work-areas-section">
      <div class="container wrapper text-center">
        <p class="section-label fs-secondary-header fw-semi-bold-100">
          Where we operate
        </p>
        <h2 class="fs-secondary-header fw-semi-bold-200">
          A world of Possibilities, beyond borders.
        </h2>
        <p class="work-area-text">
          Behind the scenes, our global partnerships are the driving force,
          turning challenges into shared successes worldwide.
        </p>
        <img src={worldMap.src} alt="Where we operate" class="world-map" />
      </div>
    </section>

    <section class="cta-section">
      <div class="container wrapper">
        <p class="section-label fs-secondary-header fw-semi-bold-100">
          Let's work together
        </p>
        <h2 class="fs-secondary-header fw-semi-bold-100">
          Ready to bring a positive change to the world? Join us in shaping a
          global trade landscape that stands out. Your journey with PactZion
          awaits!
        </h2>
        <Button class="btn-secondary" text="Join the Movement" />
      </div>
    </section>

    <section class="contact-section">
      <div class="container wrapper">
        <div class="contact-box">
          <div class="contact-form">
            <p class="section-label fs-secondary-header fw-semi-bold-100">
              Let's talk!
            </p>
            <h2 class="fs-secondary-header fw-semi-bold-100">
              Come visit us at our office or write us an email.
            </h2>

            <form action="POST">
              <div class="contact-field">
                <label for="name">Name</label>
                <input id="name" type="text" required />
              </div>

              <div class="contact-field">
                <label for="email">Email</label>
                <input id="email" type="email" required />
              </div>

              <div class="contact-field">
                <label for="message">Message</label>
                <textarea name="message" id="message" cols="30" rows="7"
                ></textarea>
              </div>

              <Button class="btn-primary submit" text="Send Message" />
            </form>
          </div>
          <div class="contact-info">
            <div class="contact-details">
              <div class="contact-detail">
                <img
                  src={mailIcon.src}
                  alt=""
                  class="contact-icon"
                  width="25px"
                />
                <p class="info">info@pactzion.com</p>
              </div>
              <div class="contact-detail">
                <img
                  src={locationIcon.src}
                  alt=""
                  class="contact-icon"
                  width="25px"
                />
                <p class="info">Bloom Tower, ECA Road, Addis Ababa, Ethiopia</p>
              </div>
              <div class="contact-detail">
                <img
                  src={phoneIcon.src}
                  alt=""
                  class="contact-icon"
                  width="25px"
                />
                <p class="info">+251 91 234 5678 | +251 91 170 7713</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d246.28255800777376!2d38.768661538293124!3d9.01615212859214!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x164b8598186f04e1%3A0x488636c1b82c1cb8!2sBloom%20Tower!5e0!3m2!1sen!2set!4v1707736517536!5m2!1sen!2set"
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        class="map"
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </section>
  </main>
  <Footer />
</Layout>
